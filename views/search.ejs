<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title><%= option %>-Hotel Management System</title>
    <!-- Custom styles for this template -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="icon" href="/icon.ico">
    <link href="/css/signin.css" rel="stylesheet">
  </head>
  <body class="text-center">
    <form class="form-signin" action="/<%= url %>" method="post">
  <h1 class="h3 mb-3 font-weight-normal"><%= option %></h1>
  <div class="checkbox mb-3">
    <label for="inputEmail" class="sr-only">Customer ID</label>
    <input type="text" name="userId" class="form-control" placeholder="Enter the customer unique id" required autofocus>
  </div>
  <button class="btn btn-lg btn-primary btn-block" type="submit" name="operation" value="<%= alturl %>"><%= buttonName %> </button>
  <p class="mt-5 mb-3 text-muted">&copy; Anton Francis Jeejo</p>
</form>
</body>
</html>
